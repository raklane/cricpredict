<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginandregistration.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cricket Predictor"
        android:gravity="center"
        android:layout_weight="1"
        style="@style/MainAppHeaders"
        android:background="@color/mainAppColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@color/secondaryAppColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Labels"
                android:text="Email"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_weight="3"
                android:textSize="16sp"
                android:id="@+id/username"
                style="@style/EditTextTheme"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Labels"
                android:text="Password"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="3"
                android:textSize="16sp"
                android:id="@+id/password"
                style="@style/EditTextTheme"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/credentials_error"
                android:gravity="center"
                android:layout_marginTop="16dp"
                tools:text="Error Text"
                android:textSize="12dp"
                android:textColor="@color/colorRed"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/login_button"
                android:layout_marginTop="16dp"
                android:layout_below="@id/credentials_error"
                android:layout_centerInParent="true"/>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/login_page_registration_button"
                android:layout_below="@id/login_button"
                android:layout_centerInParent="true"/>


        </RelativeLayout>


    </LinearLayout>







</LinearLayout>