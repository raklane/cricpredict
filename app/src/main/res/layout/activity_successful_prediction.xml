<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondaryAppColor"
    tools:context=".SuccessfulPredictionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="0dp"
        android:background="@color/mainAppColor"
        android:title="@string/app_name">

        <include layout="@layout/banner"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/successful_prediction_screen_title"
        android:layout_width="match_parent"
        style="@style/MainAppHeaders"
        tools:text="Chennai Super Kings vs Mumbai Indians"
        android:gravity="center"
        android:background="@color/mainAppColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:stretchColumns="*"
            android:shrinkColumns="*">

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Successful Prediction!"
                    android:textAlignment="center"
                    style="@style/SubHeaders"
                    android:layout_margin="16dp"/>

            </TableRow>


            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_batsman_1_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_vector_batsman"/>

                <TextView
                    android:id="@+id/successful_prediction_batsman_1"
                    style="@style/SuccessfulPredictionNames"
                    tools:text="Batsman 1" />

            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_batsman_2_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_vector_batsman"/>

                <TextView
                    android:id="@+id/successful_prediction_batsman_2"
                    tools:text="Batsman 2"
                    style="@style/SuccessfulPredictionNames"/>

            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_bowler_1_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_vector_bowler"/>

                <TextView
                    android:id="@+id/successful_prediction_bowler_1"
                    tools:text="Bowler 1"
                    style="@style/SuccessfulPredictionNames"/>

            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_bowler_2_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_vector_bowler"/>

                <TextView
                    android:id="@+id/successful_prediction_bowler_2"
                    tools:text="Bowler 2"
                    style="@style/SuccessfulPredictionNames"/>

            </TableRow>

            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_mom_1_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_mom"/>

                <TextView
                    android:id="@+id/successful_prediction_mom_1"
                    style="@style/SuccessfulPredictionNames"
                    tools:text="Man Of The Match 1"/>

            </TableRow>


            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_mom_2_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_mom"/>

                <TextView
                    android:id="@+id/successful_prediction_mom_2"
                    style="@style/SuccessfulPredictionNames"
                    tools:text="Man Of The Match 2"/>

            </TableRow>


            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_winner_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_winner"/>

                <TextView
                    android:id="@+id/successful_prediction_match_winner"
                    style="@style/SuccessfulPredictionNames"
                    tools:text="Match Winner"/>

            </TableRow>


            <TableRow android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/successful_prediction_toss_icon"
                    style="@style/PredictionIcons"
                    android:src="@drawable/ic_toss"/>

                <TextView
                    android:id="@+id/successful_prediction_toss_winner"
                    style="@style/SuccessfulPredictionNames"
                    tools:text="Toss Winner"/>

            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/successful_prediction_edit_prediction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Prediction"
            android:layout_margin="16dp"/>

    </LinearLayout>

</LinearLayout>